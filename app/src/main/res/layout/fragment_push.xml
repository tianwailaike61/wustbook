<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/floatingballframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.owater.library.CircleTextView
            android:id="@+id/centerball"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/change"
            android:textColor="@color/white"
            app:ct_backgroundColor="#0099CC"
            app:ct_border_alpha="0.5"
            app:ct_border_color="#0099CC"
            app:ct_border_width="10dp"
            app:ct_type="shadow_alpha" />


        <com.owater.library.CircleTextView
            android:id="@+id/view"
            android:layout_width="@dimen/ballsize"
            android:layout_height="@dimen/ballsize"
            android:layout_marginLeft="@dimen/ballmarginlr"
            android:layout_marginStart="@dimen/ballmarginlr"
            android:layout_marginTop="@dimen/ballmargintb"
            android:gravity="center"
            android:textColor="@color/white"
            app:ct_backgroundColor="#0099CC"
            app:ct_border_color="#0099CC"
            app:ct_border_width="5dp"
            app:ct_type="shadow_gradual" />

        <com.owater.library.CircleTextView
            android:id="@+id/view2"
            android:layout_width="@dimen/ballsize"
            android:layout_height="@dimen/ballsize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/view"
            android:layout_marginEnd="@dimen/ballmarginlr"
            android:layout_marginRight="@dimen/ballmarginlr"
            android:gravity="center"
            android:textColor="@color/white"
            app:ct_backgroundColor="#0099CC"
            app:ct_border_color="#0099CC"
            app:ct_border_width="5dp"
            app:ct_type="shadow_gradual" />

        <com.owater.library.CircleTextView
            android:id="@+id/view3"
            android:layout_width="@dimen/ballsize"
            android:layout_height="@dimen/ballsize"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ballmargintb"
            android:layout_marginLeft="@dimen/ballmarginlr"
            android:gravity="center"
            android:textColor="@color/white"
            app:ct_backgroundColor="#0099CC"
            app:ct_border_color="#0099CC"
            app:ct_border_width="5dp"
            app:ct_type="shadow_gradual" />

        <com.owater.library.CircleTextView
            android:id="@+id/view4"
            android:layout_width="@dimen/ballsize"
            android:layout_height="@dimen/ballsize"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_alignTop="@+id/view3"
            android:gravity="center"
            android:textColor="@color/white"
            app:ct_backgroundColor="#0099CC"
            app:ct_border_color="#0099CC"
            app:ct_border_width="5dp"
            app:ct_type="shadow_gradual" />
    </RelativeLayout>

</RelativeLayout>